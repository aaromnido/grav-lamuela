<article class="card card-new card-new-wide pictured {{ page.taxonomy.category|first|underscorize }}">
    <a href="{{ page.url }}">
        <header class="picture">
            {% for image in page.media.images %}
            {{ image.cropZoom(870, 250).html }}
            {% endfor %}
        </header>

        <h3 class="title">{{ page.title }}</h3>
        <div class="summary">
            {{ page.summary(150) }}
        </div>
        <footer class="footer">
            <small class="date">{{ page.date|date("M j, Y")}}</small> |
            <small class="font">{{ page.taxonomy.tag|first }}</small>
        </footer>
    </a>
</article>