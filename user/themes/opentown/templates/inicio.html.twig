{% embed 'partials/base.html.twig' %}

	{% block content %}
	<div class="body-content">

		<div class="body-content-picture">
			<img src="{{ url('theme://images/image-item-dummy.jpg') }}" alt="{{ page.title }}" />
		</div>

		<div class="wrapper">
			<header class="blog-content-header">
				<h1 class="p-name">{{ page.title }}</h1>
			</header>

			<div class="blog-content-item grid pure-g-r">
				<div id="item" class="block pure-u-3-3 h-entry">

				</div>
			</div>

			<div class="blog-content-list grid pure-g-r">
				<div id="item" class="block pure-u-2-3 h-entry">
					<div class="list-blog-header">
				        <h2 class="p-name">{{ page.title }}</h2>
						<div class="e-content">
				            {{ page.content }}
				        </div>
				    </div>
					{% include 'partials/list-article.html.twig' %}
				</div>
			</div>
		</div>
	</div>
	{% endblock %}

{% endembed %}
